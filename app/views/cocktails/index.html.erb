<div class="container text-center mt-3 bg-light">
  <h1>Cocktails</h1>
  <% @cocktails.each do |cocktail| %>
    <div class="card-product">
      <%= cl_image_tag (cocktail.photo.key, :cloud_name => dtdxhxnyd ) %>
      <div class="card-product-infos">
        <h2><%= cocktail.name %></h2>
        <p><%= link_to 'Show more', cocktail_path(cocktail) %></p>
      </div>
    </div>
  <% end %>
  <hr>
</div>
